@model IEnumerable<FinalProjectv3.Models.DISCOUNT>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TitleDiscount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AmountDiscount)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TitleDiscount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AmountDiscount)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.IDDiscount }) |
                @Html.ActionLink("Details", "Details", new { id = item.IDDiscount })
            </td>
        </tr>
    }

</table>
